	"version": "0.2.0",
	"configurations": [
		{
			"name": "gcc - Create and debug main program",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/debug",
			"args": ["ls", "-l", "-a"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Habilitar a reformatação automática para gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Run Debug",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "gcc - Create and debug tests",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/tests/tests",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Habilitar a reformatação automática para gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Run Tests",
			"miDebuggerPath": "/usr/bin/gdb"
		},
	]
}
